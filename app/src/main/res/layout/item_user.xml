<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemUserBinding">

        <variable
            name="dateFetched"
            type="String" />

        <variable
            name="user"
            type="com.rukiasoft.codewars.persistence.entities.UserInfo" />

        <variable
            name="bestLanguage"
            type="com.rukiasoft.codewars.persistence.entities.Language" />
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:clipToPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/position_label"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/position"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{user.leaderBoardPosition.toString()}"
            app:layout_constraintBaseline_toBaselineOf="@id/position_label"
            app:layout_constraintLeft_toRightOf="@id/position_label"
            app:layout_constraintStart_toEndOf="@id/position_label"
            tools:text="154" />

        <TextView
            android:id="@+id/name_label"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/position_label" />

        <TextView
            android:id="@+id/name"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{user.userName}"
            app:layout_constraintBaseline_toBaselineOf="@id/name_label"
            app:layout_constraintLeft_toRightOf="@id/name_label"
            app:layout_constraintStart_toEndOf="@id/name_label"
            tools:text="Roll" />

        <TextView
            android:id="@+id/language_label"
            style="@style/Body"
            isVisibleOrGone="@{bestLanguage != null}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_label" />

        <TextView
            android:id="@+id/language"
            style="@style/Body"
            isVisibleOrGone="@{bestLanguage != null}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{bestLanguage.languageName}"
            app:layout_constraintBaseline_toBaselineOf="@id/language_label"
            app:layout_constraintLeft_toRightOf="@id/language_label"
            app:layout_constraintStart_toEndOf="@id/language_label"
            tools:text="Kotlin" />

        <TextView
            android:id="@+id/language_score"
            style="@style/Body"
            isVisibleOrGone="@{bestLanguage != null}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{bestLanguage.score.toString()}"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/language_label"
            app:layout_constraintLeft_toRightOf="@id/language"
            app:layout_constraintStart_toEndOf="@id/language"
            tools:text="2890" />

        <TextView
            android:id="@+id/date"
            style="@style/Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{dateFetched}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23/12/2018" />

    </android.support.constraint.ConstraintLayout>
</layout>