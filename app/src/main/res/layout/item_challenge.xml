<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemChallengeBinding">


        <variable
            name="challenge"
            type="com.rukiasoft.codewars.persistence.relations.ChallengeWithAllInfo" />
    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:clipToPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/name"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{challenge.challenge.name}"
            android:textStyle="bold"
            tools:text="Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/date"
            app:layout_constraintEnd_toStartOf="@id/date"
            app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
            android:id="@+id/description"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{challenge.challenge.description}"
            tools:text="description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />
        <TextView
            android:id="@+id/language_label"
            style="@style/Body"
            isVisibleOrGone="@{challenge.hasLanguages()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/languages"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"/>

        <TextView
            android:id="@+id/language"
            style="@style/Secondary"
            isVisibleOrGone="@{challenge.hasLanguages()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{challenge.getLanguages()}"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/language_label"
            app:layout_constraintLeft_toRightOf="@id/language_label"
            app:layout_constraintStart_toEndOf="@id/language_label"
            tools:text="kotlin..." />

        <TextView
            android:id="@+id/tags"
            style="@style/Secondary"
            isVisibleOrGone="@{challenge.hasTags()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{challenge.getTagsInString()}"
            tools:text="tag"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language_label" />



        <TextView
            android:id="@+id/date"
            style="@style/Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            isVisibleOrGone="challenge.isCompleted()"
            android:text="@{challenge.getDate()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23/12/2018" />

    </android.support.constraint.ConstraintLayout>
</layout>